    <amps.version>8.3.1</amps.version>

    <jira.version>8.21.0</jira.version>
    <jira.data.version>8.21.0</jira.data.version>
    <atlassian.plugin.application.version.min>8.21.0</atlassian.plugin.application.version.min>
